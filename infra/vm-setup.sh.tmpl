#!/bin/bash
set -e
exec > >(tee /var/log/user-data.log|logger -t user-data -s 2>/dev/console) 2>&1

ADMIN_USER="${admin_user}"

echo "Start Cloud-Init config for $${ADMIN_USER}..."

apt-get update
apt-get install -y ca-certificates curl gnupg lsb-release
mkdir -p /etc/apt/keyrings
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | gpg --dearmor -o /etc/apt/keyrings/docker.gpg

# needed to override default docker location to use the latest version
echo \
  "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu \
  $(lsb_release -cs) stable" | tee /etc/apt/sources.list.d/docker.list > /dev/null

apt-get update
apt-get install -y docker-ce docker-ce-cli containerd.io docker-compose-plugin


usermod -aG docker "$${ADMIN_USER}"
systemctl enable docker
systemctl start docker

mkdir -p "/home/$${ADMIN_USER}/app"
chown "$${ADMIN_USER}:$${ADMIN_USER}" "/home/$${ADMIN_USER}/app"

echo "VM successfully configured!!"